<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alphabet.adviserconn.MainActivity"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <ImageView
        android:src="@mipmap/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/select_width" />

    <TextView

        android:id="@+id/imaginary_space"
        android:layout_width="@dimen/dialog_width"
        android:layout_height="@dimen/loading_margin"
        android:layout_marginTop="@dimen/margin_top2"
        android:background="@mipmap/red_button"
        android:gravity="center"
        android:text="假想空间"
        android:textColor="@color/textColorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/new_charpter"
        android:layout_width="@dimen/dialog_width"
        android:layout_height="@dimen/loading_margin"
        android:layout_marginTop="@dimen/pop_margin"
        android:background="@mipmap/green_button"
        android:gravity="center"
        android:text="新的章节"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>
